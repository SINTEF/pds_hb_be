    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@types/mongoose": "^5.7.36",
    "express": "^4.17.1",
    "mongoose": "^5.10.3"
